<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="kh.project.dml.MemberMapper">
    <select id="login" resultType="FpMemberVo">
        select * from member where uid = #{uid} and upw = password(#{upw});
    </select>
    
    <update id="keepLogin">
        update member set sessionkey = #{sessionkey}, sessionlimit = #{sessionlimit}
         where uid = #{uid}
    </update>
    
    <select id="checkLoginBefore" resultType="FpMemberVo">
        select * from member
         where sessionkey = #{loginCookie}
           and sessionlimit > now()
    </select>
    
    <select id="getBySnsNaver" resultType="FpMemberVo">
        select * from member where naverid = #{naverid}
    </select>
    
    <select id="getBySnsGoogle" resultType="FpMemberVo">
        select * from member where googleid = #{googleid}
    </select>
    
    <select id="getBySnsKakao" resultType="FpMemberVo">
        select * from member where kakaoid = #{kakaoid}
    </select>
</mapper>
