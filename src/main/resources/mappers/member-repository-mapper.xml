<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="kh.project.dml.member.model.dao.FpMemberRepository">

    <select id="findByEmail" parameterType="string" resultType="FpMemberVo">
        SELECT * FROM Member WHERE EMAIL = #{email}
    </select>
    <insert id="save" parameterType="FpMemberVo">
    	INSERT INTO Member (NAME, EMAIL) VALUES (#{name}, #{email})
    </insert>
    <update id="update" parameterType="FpMemberVo">
    	UPDATE Member SET NAME = #{name} WHERE EMAIL = #{email}
    </update>
</mapper>
